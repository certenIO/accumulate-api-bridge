# CERTEN API Bridge - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Active Network Endpoint (Kermit Testnet by default)
# Kermit testnet runs on 206.191.154.164 with ports 8660, 8760, 8860, 8960
ACCUM_ENDPOINT=http://206.191.154.164/v3
ACCUM_ENDPOINT_V2=http://206.191.154.164/v2

# Alternative Network Endpoints
# DevNet (Local Development)
# ACCUM_ENDPOINT=http://localhost:26660/v3
# ACCUM_ENDPOINT_V2=http://localhost:26660/v2

# Mainnet (Production) - NOT YET AVAILABLE
# ACCUM_ENDPOINT=https://mainnet.accumulatenetwork.io/v3
# ACCUM_ENDPOINT_V2=https://mainnet.accumulatenetwork.io/v2

# =============================================================================
# ACCUMULATE CREDENTIALS (Required for signing transactions)
# =============================================================================

# Base Accumulate Lite Identity (LID) - Used for paying transaction fees
# Format: 64-char hex public key + 64-char hex private key (128 chars total)
ACCUM_PUBLIC_KEY=your_public_key_hex_here
ACCUM_PRIV_KEY=your_private_key_hex_here
ACCUM_PUBLIC_KEY_HASH=your_public_key_hash_hex_here

# Lite Token Account (LTA) - Holds ACME tokens for credits
ACCUM_LTA=acc://your_lite_token_account_here/acme

# Lite Identity (LID) - Identity for signing
ACCUM_LID=acc://your_lite_identity_here

# =============================================================================
# INFURA API KEY (for EVM chain RPC fallback)
# =============================================================================
INFURA_API_KEY=your-infura-api-key

# =============================================================================
# ETHEREUM CONFIGURATION (For cross-chain operations)
# =============================================================================

# Sepolia Testnet (default for testing)
ETHEREUM_URL=https://sepolia.infura.io/v3/your_infura_project_id
ETH_CHAIN_ID=11155111

# Ethereum Wallet
ETH_PRIVATE_KEY=0x_your_eth_private_key_here
ETH_ACCOUNT_ADDRESS=0x_your_eth_address_here

# =============================================================================
# SMART CONTRACT ADDRESSES (Sepolia Testnet)
# =============================================================================

ANCHOR_CONTRACT_ADDRESS=0x9B29771EFA2C6645071C589239590b81ae2C5825
ACCOUNT_ABSTRACTION_ADDRESS=0xC30E74e54a54a470139b75633CEDeC8404743020

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API Server Port
PORT=8085

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000,https://certen-web.web.app

# =============================================================================
# OPTIONAL: ADI CREDENTIALS (For specific ADI operations)
# =============================================================================

# CERTEN Demo ADI
# CERTEN_ACCOUNT_V2_ADI=acc://your-demo-adi.acme
# CERTEN_ACCOUNT_V2_PRIVATE_KEY=
# CERTEN_ACCOUNT_V2_PUBLIC_KEY=
# CERTEN_ACCOUNT_V2_PUBLIC_KEY_HASH=

# =============================================================================
# PROOF SERVICE CONFIGURATION (For transaction proof status)
# =============================================================================

# Proof Service URL - Used for proof generation, batching, and anchor status
# If not set, defaults to http://localhost:8082
# The proof service endpoints will gracefully fail if the service is unavailable
PROOF_SERVICE_URL=http://localhost:8082

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=debug
DEBUG_TRANSACTIONS=true

# Development Mode
DEV_MODE=true
